{
  "name": "craft-agents-oss-webapp",
  "version": "0.1.0",
  "description": "Web app for Craft Agents",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "cd apps/webapp && bun run dev",
    "dev:backend": "cd apps/webapp && bun run dev:backend",
    "dev:frontend": "cd apps/webapp && bun run dev:frontend",
    "build": "cd apps/webapp && bun run build",
    "typecheck": "cd packages/shared && bun run tsc --noEmit"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/bun": "latest",
    "@types/node": "^25.0.8",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.0.0",
    "vite": "^6.2.4"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.19",
    "@anthropic-ai/sdk": "^0.71.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "glob": "^13.0.0",
    "jotai": "^2.16.0",
    "lucide-react": "^0.561.0",
    "marked": "^17.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^3.0.6",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "shiki": "^3.19.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^11.1.0",
    "zod": "^4.0.0"
  }
}
